# Configuração básica para resolver erro 403
RewriteEngine On

# Definir index.html como página padrão
DirectoryIndex index.html

# Impedir listagem de diretórios
Options -Indexes

# Proteger apenas arquivos críticos
<Files ".htaccess">
    Require all denied
</Files>

<Files ".env">
    Require all denied
</Files>

# Adicionar cabeçalhos de segurança avançados
<IfModule mod_headers.c>
    # Content Security Policy (CSP) - Simplificado
    # Header always set Content-Security-Policy "default-src 'self' 'unsafe-inline' 'unsafe-eval' data: https:; img-src 'self' data: https:; media-src 'self' https:;"

    # Proteção contra clickjacking
    Header set X-Frame-Options "DENY"

    # Prevenir MIME sniffing
    Header set X-Content-Type-Options "nosniff"

    # Proteção XSS
    Header set X-XSS-Protection "1; mode=block"

    # Controlar informações de referrer
    Header set Referrer-Policy "strict-origin-when-cross-origin"

    # HTTPS obrigatório
    Header set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

    # Controlar APIs do navegador
    Header set Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=(), usb=(), magnetometer=(), gyroscope=(), accelerometer=()"

    # Remover informações do servidor
    Header unset Server
    Header unset X-Powered-By
    Header unset X-AspNet-Version
    Header unset X-AspNetMvc-Version
</IfModule>

# Bloquear acesso a arquivos de backup e temporários
<FilesMatch "\.(bak|backup|old|tmp|temp|log|sql|gz|tar|zip|swp)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Bloquear tentativas de acesso a arquivos de configuração
<FilesMatch "\.(ini|conf|config|inc|htpasswd)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

