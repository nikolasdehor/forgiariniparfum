# Ativar o motor de reescrita
RewriteEngine On

# Definir a pasta base para o site
RewriteBase /

# Definir o index.html como página padrão
DirectoryIndex index.html

# Redirecionar automaticamente para index.html quando acessar apenas o domínio
RewriteCond %{REQUEST_URI} ^/$
RewriteRule ^$ index.html [L]

# Permitir acesso direto a arquivos existentes
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^.*$ - [L]

# Permitir acesso direto a diretórios existentes
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^.*$ - [L]

# Redirecionar URLs sem extensão para .html (se o arquivo existir)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]

# Impedir listagem de diretórios
Options -Indexes

# Proteger arquivos sensíveis
<Files .htaccess>
    Order Allow,Deny
    Deny from all
</Files>

<Files .env>
    Order Allow,Deny
    Deny from all
</Files>

# Proteger diretórios de sistema
<Files ~ "^\.">
    Order Allow,Deny
    Deny from all
</Files>

# Adicionar cabeçalhos de segurança
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    Header set Strict-Transport-Security "max-age=31536000; includeSubDomains"
    Header unset Server
    Header unset X-Powered-By
</IfModule>

# Bloquear acesso a arquivos de backup e temporários
<FilesMatch "\.(bak|backup|old|tmp|temp|log|sql|gz|tar|zip)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Bloquear tentativas de acesso a arquivos de configuração
<FilesMatch "\.(ini|conf|config|inc)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Comprimir arquivos para melhorar o desempenho
<IfModule mod_deflate.c>
    # Comprimir tipos de arquivo específicos
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/atom+xml
    AddOutputFilterByType DEFLATE image/svg+xml

    # Não comprimir imagens já comprimidas
    SetEnvIfNoCase Request_URI \
        \.(?:gif|jpe?g|png|ico)$ no-gzip dont-vary
    SetEnvIfNoCase Request_URI \
        \.(?:exe|t?gz|zip|bz2|sit|rar)$ no-gzip dont-vary
</IfModule>

# Definir cache para arquivos estáticos
<IfModule mod_expires.c>
    ExpiresActive On

    # Imagens - cache longo
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"

    # Fontes - cache longo
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"

    # CSS e JavaScript - cache médio
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"

    # Documentos - cache médio
    ExpiresByType application/pdf "access plus 1 month"

    # Vídeos - cache longo
    ExpiresByType video/mp4 "access plus 1 year"
    ExpiresByType video/webm "access plus 1 year"

    # HTML - cache curto para atualizações frequentes
    ExpiresByType text/html "access plus 1 day"

    # Outros arquivos
    ExpiresDefault "access plus 1 week"
</IfModule>

# Cache control headers
<IfModule mod_headers.c>
    # Cache para imagens e fontes
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico|ttf|woff|woff2)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>

    # Cache para CSS e JS
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=2592000"
    </FilesMatch>

    # Cache para HTML
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "public, max-age=86400"
    </FilesMatch>
</IfModule>
