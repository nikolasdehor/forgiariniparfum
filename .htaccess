# Ativar o motor de reescrita
RewriteEngine On

# Definir a pasta base para o site
RewriteBase /

# Definir o index.html como página padrão
DirectoryIndex index.html

# Redirecionar automaticamente para index.html quando acessar apenas o domínio
RewriteCond %{REQUEST_URI} ^/$
RewriteRule ^$ index.html [L]

# Permitir acesso direto a arquivos existentes
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^.*$ - [L]

# Permitir acesso direto a diretórios existentes
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^.*$ - [L]

# Redirecionar URLs sem extensão para .html (se o arquivo existir)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]

# Impedir listagem de diretórios
Options -Indexes

# Proteger arquivos sensíveis
<Files .htaccess>
    Order Allow,Deny
    Deny from all
</Files>

<Files .env>
    Order Allow,Deny
    Deny from all
</Files>

# Proteger diretórios de sistema
<Files ~ "^\.">
    Order Allow,Deny
    Deny from all
</Files>

# Adicionar cabeçalhos de segurança avançados
<IfModule mod_headers.c>
    # Content Security Policy (CSP)
    Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://www.googletagmanager.com https://www.google-analytics.com https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://cdnjs.cloudflare.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; media-src 'self'; connect-src 'self' https://www.google-analytics.com; frame-src 'none'; object-src 'none'; base-uri 'self'; form-action 'self';"

    # Proteção contra clickjacking
    Header set X-Frame-Options "DENY"

    # Prevenir MIME sniffing
    Header set X-Content-Type-Options "nosniff"

    # Proteção XSS
    Header set X-XSS-Protection "1; mode=block"

    # Controlar informações de referrer
    Header set Referrer-Policy "strict-origin-when-cross-origin"

    # HTTPS obrigatório
    Header set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

    # Controlar APIs do navegador
    Header set Permissions-Policy "geolocation=(), microphone=(), camera=(), payment=(), usb=(), magnetometer=(), gyroscope=(), accelerometer=()"

    # Remover informações do servidor
    Header unset Server
    Header unset X-Powered-By
    Header unset X-AspNet-Version
    Header unset X-AspNetMvc-Version
</IfModule>

# Bloquear acesso a arquivos de backup e temporários
<FilesMatch "\.(bak|backup|old|tmp|temp|log|sql|gz|tar|zip|swp)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Bloquear tentativas de acesso a arquivos de configuração
<FilesMatch "\.(ini|conf|config|inc|htpasswd)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Proteção contra SQL Injection e XSS
RewriteCond %{QUERY_STRING} (\<|%3C).*script.*(\>|%3E) [NC,OR]
RewriteCond %{QUERY_STRING} GLOBALS(=|\[|\%[0-9A-Z]{0,2}) [OR]
RewriteCond %{QUERY_STRING} _REQUEST(=|\[|\%[0-9A-Z]{0,2}) [OR]
RewriteCond %{QUERY_STRING} (\<|%3C).*iframe.*(\>|%3E) [NC,OR]
RewriteCond %{QUERY_STRING} (\<|%3C).*object.*(\>|%3E) [NC,OR]
RewriteCond %{QUERY_STRING} (\<|%3C).*embed.*(\>|%3E) [NC,OR]
RewriteCond %{QUERY_STRING} (SELECT|UNION|INSERT|DROP|DELETE|UPDATE|CREATE|ALTER|EXEC) [NC]
RewriteRule ^(.*)$ - [F,L]

# Proteção contra User Agents maliciosos
RewriteCond %{HTTP_USER_AGENT} (libwww-perl|wget|python|nikto|curl|scan|java|winhttp|clshttp|loader) [NC,OR]
RewriteCond %{HTTP_USER_AGENT} (%0A|%0D|%27|%3C|%3E|%00) [NC,OR]
RewriteCond %{HTTP_USER_AGENT} (;|<|>|'|"|\)|\(|%0A|%0D|%22|%27|%28|%3C|%3E|%00).*(libwww-perl|wget|python|nikto|curl|scan|java|winhttp|HTTrack|clshttp|archiver|loader|email|harvest|extract|grab|miner) [NC]
RewriteRule ^(.*)$ - [F,L]

# Bloquear acesso direto a diretórios sensíveis
RedirectMatch 403 /\.git
RedirectMatch 403 /\.env
RedirectMatch 403 /node_modules
RedirectMatch 403 /vendor
RedirectMatch 403 /\.vscode

# Comprimir arquivos para melhorar o desempenho
<IfModule mod_deflate.c>
    # Comprimir tipos de arquivo específicos
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/atom+xml
    AddOutputFilterByType DEFLATE image/svg+xml

    # Não comprimir imagens já comprimidas
    SetEnvIfNoCase Request_URI \
        \.(?:gif|jpe?g|png|ico)$ no-gzip dont-vary
    SetEnvIfNoCase Request_URI \
        \.(?:exe|t?gz|zip|bz2|sit|rar)$ no-gzip dont-vary
</IfModule>

# Definir cache para arquivos estáticos
<IfModule mod_expires.c>
    ExpiresActive On

    # Imagens - cache longo
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"

    # Fontes - cache longo
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"

    # CSS e JavaScript - cache médio
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"

    # Documentos - cache médio
    ExpiresByType application/pdf "access plus 1 month"

    # Vídeos - cache longo
    ExpiresByType video/mp4 "access plus 1 year"
    ExpiresByType video/webm "access plus 1 year"

    # HTML - cache curto para atualizações frequentes
    ExpiresByType text/html "access plus 1 day"

    # Outros arquivos
    ExpiresDefault "access plus 1 week"
</IfModule>

# Cache control headers
<IfModule mod_headers.c>
    # Cache para imagens e fontes
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico|ttf|woff|woff2)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>

    # Cache para CSS e JS
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=2592000"
    </FilesMatch>

    # Cache para HTML
    <FilesMatch "\.(html|htm)$">
        Header set Cache-Control "public, max-age=86400"
    </FilesMatch>
</IfModule>

# ================================================================
# REDIRECIONAMENTOS INTELIGENTES
# ================================================================

# Redirecionamento temporário para arquivos que ainda estão em public_html
# (Remove esta seção após mover todos os arquivos para a raiz)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{DOCUMENT_ROOT}/public_html%{REQUEST_URI} -f
RewriteRule ^(.*)$ /public_html/$1 [L]

# Redirecionamento para index.html para SPA (Single Page Application)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/admin\.html$
RewriteCond %{REQUEST_URI} !^/assets/
RewriteCond %{REQUEST_URI} !^/public_html/
RewriteCond %{REQUEST_URI} !\.(css|js|png|jpg|jpeg|gif|webp|svg|pdf|mp4|webm|woff|woff2|ttf|eot|ico|json|xml|txt)$
RewriteRule ^(.*)$ /index.html [L]
